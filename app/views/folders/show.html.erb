<div class="container">
  <div class="card">
    <div class="card-header">
      <h2 class="card-title"><%= @folder.folderName %></h2>
    </div>
    <div class="card-body">

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <% @folder.files.each do |file| %>
          <%= link_to file.filename, rails_blob_path(file, disposition: "attachment"), class: "btn btn-outline-secondary me-md-2 mb-2 mb-md-0" %>
        <% end %>
      </div>
    </div>
  </div>
 <div class="d-flex justify-content-between mt-3">
  <%= link_to 'Home', root_path, class: "btn btn-outline-primary mr-2" %>
  <%= link_to 'Edit', edit_folder_path(@folder), class: "btn btn-outline-success ms-2" %>
  <%= link_to 'Back', folders_path, class: "btn btn-outline-primary ms-2" %>
</div>
</div>
